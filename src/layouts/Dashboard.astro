---
interface Props {
	title: string;
}

const { title } = Astro.props;
import NavBar from "../components/admin/Navbar.astro";
---

<!doctype html>
<html lang="es" class="overflow-x-hidden">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href='https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.css' rel='stylesheet' />
		<title>{title}</title>
		<!-- font -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poetsen+One&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#091920] h-screen font-poetsen bg-fondo-svg bg-cover overflow-x-hidden">
		<main class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
			<NavBar />
			<slot />
		</main>
	</body>
</html>